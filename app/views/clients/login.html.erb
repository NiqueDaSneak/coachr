<img class="login-logo" src="/imgs/clarity-logo.png">

<p class="login-signup-errors"> <%= flash[:error]%> </p>
<div class="input-holder">
  <%= form_tag('/clients/find') %>
  <div>
    <%= text_field_tag 'email', nil, placeholder: "Email:", :required => true, :class => "input-fields" %>
  </div>
  <div>
    <%= password_field_tag 'password', nil, placeholder: "Password:", :required => true, :class => "input-fields" %>
  </div>
  <div>
    <%= submit_tag "Log In", :class => "submit-button" %>
  </div>
</div>