<p>Please fill out the form below to create a profile:</p>
<p> <%= flash[:error] %></p>
<%= form_for @coach do |f| %>
<%= f.text_field :full_name, :placeholder => "Full Name:", :required => true %>
<%= f.text_field :company_name, :placeholder => "Company Name:", :required => true %>
<%= f.text_field :email, :placeholder => "Email:", :required => true %>
<%= f.password_field :password, :placeholder => "Password:", :required => true %>
<%= f.submit %>
<% end %>